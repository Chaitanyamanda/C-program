#include<stdio.h>
double average(int arr[],int size);
int main()
{
  int size;
  scanf("%d",&size);
  int arr[size];
  for(int i=0;i<size;i++){
    scanf("%d",&arr[i]);
  }
  double result=average(arr,size);
  printf("\naverage=%.2lf",result);
}
double average(int arr[],int size){
  double average;
  int sum=0;
  printf("array:");
  for(int i=0;i<size;i++){
    sum=sum+arr[i];
  printf("%d",arr[i]);
}
average = sum / size;
return average;
}
